<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/styles/reports.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid main-window mt-5">
        <a class="btn btn-outline-primary border-3 bg-white p-3 px-5 mb-4 back-button" href="/admin">&lt Back</a>

        <div class="records-table container-fluid">
            <div class="row head-row d-none d-md-flex">
                <div class="col-3 d-flex table-cell odd-column">User Id</div>
                <div class="col-3 d-flex table-cell even-column">Name</div>
                <div class="col-3 d-flex table-cell odd-column">Photo</div>
                <div class="col-3 d-flex table-cell even-column">Action</div>
            </div>

            <% users.forEach(user => { %>
                <div class="row mb-2 mb-md-0">
                    <div class="col-12 col-md-6 d-flex p-0 person-info">
                        <div class="col-6 d-flex table-cell odd-column"><div class="d-md-none">User Id:</div><%= user._id %></div>
                        <div class="col-6 d-flex table-cell even-column"><div class="d-md-none">Name:</div><%= user.name %></div>
                    </div>
                    <div class="col-12 col-md-6 d-flex p-0 person-values">
                        <div class="col-6 d-md-flex table-cell odd-column">
                            <span class="d-md-none">Photo:</span>
                            <img src="<%= user.img %>" class="user-image py-1">
                        </div>
                        <div class="col-6 d-flex table-cell even-column">
                            <div class="row m-0 w-100 justify-content-around">
                                <div class="d-md-none col-12 text-center">Action:</div>
                                <% if (user.update) { %>
                                    <button type="button" class="btn btn-primary col-5 action-button" data-userid="<%= user._id %>" data-action-type="done"></data-action-type>Done</button>
                                <% } %>
                                <button type="button" class="btn btn-outline-primary col-5 action-button" data-userid="<%= user._id %>" data-action-type="delete">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    
    <script src="/scripts/reports.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>